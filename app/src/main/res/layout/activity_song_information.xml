<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="vertical"
        tools:context="com.example.android.music.SongInformation">

        <ImageView
            android:id="@+id/song_image"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            tools:src="@drawable/shakirasinglewc" />


        <TextView
            android:id="@+id/song_name_text_view"
            style="@style/text_view"
            tools:text="Name: Waka Waka" />


        <TextView
            android:id="@+id/song_band_text_view"
            style="@style/text_view"
            tools:text="Band: Shakira" />


        <TextView
            android:id="@+id/song_length_text_view"
            style="@style/text_view"
            tools:text="Length: 3:20" />


        <TextView
            android:id="@+id/song_date_text_view"
            style="@style/text_view"
            tools:text="Release Date: 2010" />

        <Button
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#4CAF50"
            android:text="Play"
            android:textAllCaps="true"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>